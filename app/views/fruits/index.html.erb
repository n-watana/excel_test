<p id="notice"><%= notice %></p>

<h1>Listing Fruits</h1>

<h2>Spreadsheet</h2>
<%= form_tag upload_ss_fruits_path, { multipart: true } do %>
  <%= file_field_tag :file %>
  <br />
  <%= submit_tag "Spreadsheet を使ってxls形式をアップロード" %>
<% end %>
<br />

<%= form_tag download_ss_fruits_path do %>
  <%= submit_tag "Spreadsheet を使ってxls形式でダウンロード" %>
<% end %>
<br />

<h2>rubyXL</h2>
<%= form_tag upload_rx_fruits_path, { multipart: true } do %>
  <%= file_field_tag :file %>
  <br />
  <%= submit_tag "rubyXL を使ってxls形式をアップロード" %>
<% end %>
<br />

<%= form_tag download_rx_fruits_path do %>
  <%= submit_tag "rubyXL を使ってxls形式でダウンロード" %>
<% end %>
<br />

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Season</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fruits.each do |fruit| %>
      <tr>
        <td><%= fruit.name %></td>
        <td><%= fruit.season.name %></td>
        <td><%= link_to 'Show', fruit %></td>
        <td><%= link_to 'Edit', edit_fruit_path(fruit) %></td>
        <td><%= link_to 'Destroy', fruit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fruit', new_fruit_path %>
